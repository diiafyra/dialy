<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/o_time"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#DEFFC4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:backgroundTint="#A0B392">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Remaining: "
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:padding="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textSize="20dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="346dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:backgroundTint="#8990B3"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/realtime"
                android:layout_marginRight="10dp"
                android:text="REALTIME CHART"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:layout_toRightOf="@+id/realtime"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:backgroundTint="#DEE3FF"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/workChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="WORK CHART"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>

</ScrollView>